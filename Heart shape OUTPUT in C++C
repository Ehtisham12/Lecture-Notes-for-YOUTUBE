#include <iostream>
using namespace std;

int main()
{     
	int i, a, b, c, d, e, f, g,z;
	    
	for (i = 1; i <= 5; i++)
	{     
		for (z = 1; z <= 5; z++)
		{
			cout << " ";
		}
		for (a = 1; a <= (5 - i); a++)
		{
			cout << " ";
		}            
		for (b = 1; b <= i; b++)
		{
			cout << "*";
		}             //3
		for (c = 1; c <= i; c++)
		{
			cout << "*";
		}                 
		for (d = 1; d <= (5 - i); d++)
		{
			cout << " ";
		}                  
		for (e = 1; e <= (5 - i); e++)
		{
			cout << " ";
		}               
		for (f = 1; f <= i; f++)
		{
			cout << "*";
		}               
		for (g = 1; g <= i; g++)
		{
			cout << "*";
		}
		cout << endl;
	}   //0
	for (i = 10; i >= 1; i--)
	{
		for (z = 1; z <= 5; z++)
		{
			cout << " ";
		}
		                    
		for (a = 1; a <= (10 - i); a++)
		{
			cout << " ";
		}                
		for (b = 1; b <= i; b++)
		{
			cout << "*";
		}
		for (c = 1; c <= i; c++)
		{
			cout << "*";
		}
		cout << endl;
	}

}
